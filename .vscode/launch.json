{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI (Uvicorn)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "backend.app:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "jinja": true,
      "justMyCode": true,
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: 后端服务器 (直接运行)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/app.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: 后端服务器 (热重载)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/app_dev.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "subProcess": true
    },
    {
      "name": "前端: Vite Dev Server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "全栈调试 (FastAPI + 前端)",
      "configurations": [
        "Python: FastAPI (Uvicorn)",
        "前端: Vite Dev Server"
      ],
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 1
      }
    },
    {
      "name": "全栈调试 (热重载)",
      "configurations": [
        "Python: 后端服务器 (热重载)",
        "前端: Vite Dev Server"
      ],
      "presentation": {
        "hidden": false,
        "group": "development",
        "order": 2
      }
    }
  ]
}
